# 	# TODO: lazyvim
# 	nvim --headless '+Lazy! sync' +qa
# 	echo ""
# fi

if [[ -e ~/.config/tmux/plugins/tpm/bin/install_plugins ]]; then
	echo -e "${GREEN}[+] Automatic tpm installation${NC}"
	~/.config/tmux/plugins/tpm/bin/install_plugins
	echo ""
fi
