#https://github.com/i3/i3/issues/2936
disable_randr15 yes

# The middle button toggles floating
bindsym button2 floating toggle
bindsym --whole-window $mod+button2 floating toggle

# The side buttons move the window around
bindsym button9 move left
bindsym button8 move right

for_window [class="obsidian" title="TODO"] move to scratchpad, move position mouse
bindsym $mod+o exec obsidian obsidian://open?vault=TODO; exec i3-msg '[class="obsidian"] [title="TODO"]' scratchpad show
exec_always --no-startup-id obsidian obsidian://open?vault=TODO

