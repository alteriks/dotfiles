# i3 config file (v4)

set $swayconfig ~/.config/sway
set $HOSTNAME `hostname`
# Set mod key (Mod1=<Alt>, Mod4=<Super>)
set $mod Mod4

# Ergodox
set $hyper Ctrl+Shift+Mod1+Mod4
set $meh Ctrl+Shift+Mod1

set $sway_icon /home/datastore/FotoVaria/Icon/swaywm.png
set $notify_sway notify-send -u low -e -t 1000 -a sway -i /home/datastore/FotoVaria/Icon/swaywm.png

include $swayconfig/$HOSTNAME.conf
include $swayconfig/window.conf
include $swayconfig/scratchpad.conf

# INFO: Import environment variables from 50-systemd-user.conf, Required for xdg-desktop-portal-wlr, flameshot
# https://wiki.archlinux.org/title/Sway#Configuration
include /etc/sway/config.d/*

input "type:keyboard" {
    xkb_layout pl
    xkb_options caps:escape,kpdl:dot
}

font pango:DejaVu Sans Mono for Powerline, Book 11

# Set inner/outer gaps
gaps inner 6
gaps outer -4

# Smart gaps (gaps used if only more than one container on the workspace)
smart_gaps on

# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

# floating_maximum_size 1800 x 1200
floating_minimum_size 400 x 250

#TODO: https://wiki.archlinux.org/index.php/I3#Save_and_restore_the_window_layout

## class                 border  backgr. text    indicator
#client.focused_inactive #4F99D3 #4F99D3 #151718 #9FCA56
client.focused #9FCA56 #9FCA56 #151718 #A074C4
client.unfocused #1f2326 #1f2326 #AAAAAA #A074C4
client.urgent #CE4045 #CE4045 #FFFFFF #DCCD69

workspace_layout default
#workspace_layout default|stacking|tabbed

# Normal windows should use small borders, floating should have tab title
default_border pixel 3
default_floating_border normal

# Hide borders
hide_edge_borders none

#Focus
focus_follows_mouse yes
focus_wrapping yes
# focus_on_window_activation none
focus_on_window_activation urgent
force_display_urgency_hint 3000 ms

# start a terminal
set $terminal HOSTNAME=$HOSTNAME kitty --single-instance --instance-group kitty
bindsym $mod+Return exec HOSTNAME=$HOSTNAME /usr/bin/kitty --single-instance --instance-group kitty
bindsym $mod+Shift+Return exec $terminal --class kitty-floating

# kill focused window
bindsym --release $mod+Shift+q exec xkill
bindsym $mod+q kill
bindsym $mod+F4 kill
bindsym Mod1+F4 kill

# start launcher
# bindsym $mod+space       exec "fuzzel"
bindsym $mod+space       exec albert toggle
bindsym $meh+space       exec albert show 'system '

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+semicolon focus mode_toggle

# alternatively, you can use the cursor keys:
# Brakes Previos/Next page in web browser history
#bindsym $mod+Left focus left
#bindsym $mod+Down focus down
#bindsym $mod+Up focus up
#bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys:
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle
bindsym $mod+Shift+f fullscreen toggle
#bindsym $mod+f [urgent=latest] focus

# split orientation
bindsym $mod+bar split h; exec $notify_sway 'tile horizontally'
bindsym $mod+backslash split h; exec $notify_sway 'tile horizontally'
bindsym $mod+minus splitv; exec $notify_sway 'tile vertically'

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking; exec $notify_sway 'stacking layout'
bindsym $mod+w layout tabbed; exec $notify_sway 'tabbed layout'
bindsym $mod+e layout toggle split; exec $notify_sway 'tabbed split'

# focus the parent container
bindsym $mod+Shift+P focus parent

# focus the child container
bindsym $mod+Shift+C focus child

set $workspace1 1
set $workspace2 2
set $workspace3 3
set $workspace4 4
set $workspace5 5
set $workspace6 6
set $workspace7 7
set $workspace8 8
set $workspace9 9
set $workspace10 10
set $workspace11 11
set $workspace12 12

# switch to workspace
bindsym $mod+1 workspace number $workspace1
bindsym $mod+2 workspace number $workspace2
bindsym $mod+3 workspace number $workspace3
bindsym $mod+4 workspace number $workspace4
bindsym $mod+5 workspace number $workspace5
bindsym $mod+6 workspace number $workspace6
bindsym $mod+7 workspace number $workspace7
bindsym $mod+8 workspace number $workspace8
bindsym $mod+9 workspace number $workspace9
bindsym $mod+0 workspace number $workspace10
bindsym $hyper+1 workspace number $workspace11
bindsym $hyper+2 workspace number $workspace12
bindsym $hyper+3 workspace number $workspace13
bindsym $hyper+4 workspace number $workspace14
bindsym $hyper+5 workspace number $workspace15
bindsym $hyper+6 workspace number $workspace16
bindsym $hyper+7 workspace number $workspace17
bindsym $hyper+8 workspace number $workspace18
bindsym $hyper+9 workspace number $workspace19
bindsym $hyper+0 workspace number $workspace20

# move focused container to workspace
bindsym $mod+Ctrl+1 move container to workspace $workspace1
bindsym $mod+Ctrl+2 move container to workspace $workspace2
bindsym $mod+Ctrl+3 move container to workspace $workspace3
bindsym $mod+Ctrl+4 move container to workspace $workspace4
bindsym $mod+Ctrl+5 move container to workspace $workspace5
bindsym $mod+Ctrl+6 move container to workspace $workspace6
bindsym $mod+Ctrl+7 move container to workspace $workspace7
bindsym $mod+Ctrl+8 move container to workspace $workspace8
bindsym $mod+Ctrl+9 move container to workspace $workspace9
bindsym $mod+Ctrl+0 move container to workspace $workspace10

bindsym --whole-window $mod+button4 move container to workspace next; workspace next
bindsym --whole-window $mod+button5 move container to workspace prev; workspace prev

# Move to workspace with focused container
bindsym $mod+Shift+1 move container to workspace $workspace1; workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2; workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3; workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4; workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5; workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6; workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7; workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8; workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9; workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10; workspace $workspace10

# Move workspace to output
bindsym $mod+Ctrl+h move workspace to output left
bindsym $mod+Ctrl+l move workspace to output right

bindsym $mod+Shift+r reload
bindsym $mod+Shift+e exec "swaynag -t warning -m 'You pressed the exit shortcut. Do you really want to exit sway? This will end your Wayland session.' -b 'Yes, exit sway' 'swaymsg exit'"

bindsym $mod+question exec ~/bin/sway-prop
for_window [app_id="kitty_sway-prop"] floating enable, resize set 400 1100

# The middle button toggles floating
bindsym button2 floating toggle
bindsym --whole-window $mod+button2 floating toggle

bindsym $mod+b exec "kitty --single-instance --instance-group no_confirm_on_close -o confirm_os_window_close=0 --class=kitty_btop btop; exit"
for_window [app_id="kitty_btop"] floating enable, resize set 1450 950

bindsym $mod+x exec "kitty --single-instance --instance-group no_confirm_on_close -o confirm_os_window_close=0 --class=kitty_xplr xplr; exit"
for_window [app_id="kitty_xplr"] floating enable, resize set 1450 950

#xprop WM_CLASS = instance,class
assign [ title = "Deluge" ] workspace $workspace1
assign [ class = "RimWorldLinux" ] workspace $workspace1
assign [ class = "Thunar" ] workspace $workspace1

assign [ class = "termite" ] workspace $workspace2

assign [ class = "Opera" ] workspace $workspace3
assign [ class = "Vivaldi" ] workspace $workspace3

assign [ class = "Gimp-.*" ] workspace $workspace4
assign [ class = "Remmina" ] workspace $workspace4

assign [ class = "calibre" ] workspace $workspace5
assign [ class = "Zathura" ] workspace $workspace5

bindsym Print exec flameshot gui -p ~/tmp/
bindsym $mod+p exec flameshot gui -p ~/tmp/
bindsym $mod+F3 exec nemo
# bindsym $mod+Shift+d --release exec "killall dunst; exec notify-send 'restart dunst'"

# workspace back and forth (with/without active container)
workspace_auto_back_and_forth yes
# bindsym $mod+b workspace back_and_forth
bindsym $mod+BackSpace workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec ~/.config/i3/bin/pavolume +10% #increase sound volume
bindsym XF86AudioLowerVolume exec ~/.config/i3/bin/pavolume -10% #decrease sound volume
bindsym XF86AudioMute exec ~/.config/i3/bin/pavolume toggle # mute sound
bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Ergodox cheatsheet
bindsym $meh+e exec /usr/bin/nomacs -m frameless -f memo/ergodox/ergodox_base.png

# toggle sticky
bindsym $mod+Shift+s sticky toggle

#navigate workspaces next / previous
bindsym $mod+Ctrl+Right workspace next
bindsym $mod+Ctrl+Left  workspace prev

bindsym $mod+n exec swaync-client -t

# Autostart applications
# exec_always ~/.config/i3/bin/i3-switch-if-workspace-empty
# exec_always autotiling
exec GTK_THEME=Adwaita:dark swaync -s ~/.config/swaync/style.css -c ~/.config/swaync/config.jsonc

exec waybar -c ~/.config/waybar/$HOSTNAME.jsonc -s ~/.config/waybar/style.css
exec multibg-sway ~/tmp/swaybg
exec swaymsg 'workspace $workspace2; splith; exec $terminal'
exec /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
exec /usr/bin/udiskie --no-notify --tray --no-automount --file-manager="kitty xplr"
exec albert
#exec xfce4-power-manager
